<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project syt5-gek961-cloud-datenmanagement-mganguly-tgm">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <!--define folder properties-->
	<property name="src.dir"     value="src"/>
    <property name="dir.buildfile" value="."/>
    <property name="dir.workspace" value="${dir.buildfile}/../.."/>
    <property name="dir.jarfile" value="${dir.buildfile}"/>
    <target name="create_run_jar">
        <jar destfile="${dir.jarfile}/Server.jar" filesetmanifest="mergewithoutmain">
            <manifest>
        		<attribute name="Main-Class" value="main.Main"/>
        		<attribute name="Server-Class" value="server.Server"/>
        		<attribute name="Site-Class" value="server.Site"/>
        		<attribute name="User-Class" value="server.User"/>
                <attribute name="Class-Path" value="src"/>
            </manifest>
            <fileset dir="${dir.jarfile}/bin"/>
        </jar>
    </target>
</project>
